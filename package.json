{
    "name": "stocksense",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev:client": "npm run dev --workspaces=client",
        "dev:server": "npm run dev --workspaces=server",
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\""
    },
    "devDependencies": {
        "concurrently": "^9.2.1",
        "dotenv-cli": "^11.0.0"
    }
}
